<!DOCTYPE html>
<html>
  <head>
    <title>HackMe</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>
  <body>
    <div id="content">
      <nav>
        <ul>
          <li> <%= link_to_unless_current "Home", root_path %> </li>
          <li> <%= link_to_unless_current "Articles", articles_path %> </li>
          <li> <%= link_to_unless_current "People", users_path %> </li>
          <li> <%= link_to_unless_current "Help", static_pages_help_path %> </li>
          <% if current_user %>
            <li style="float:right">
            Logged in as <%= current_user.name %>
            <%= link_to_unless_current "Log out", log_out_path %>
            </li>
          <% else %>
            <li style="float:right">
            <%= link_to_unless_current "Sign up", sign_up_path %> or
            <%= link_to_unless_current "Log in",  log_in_path  %>
            </li>
          <% end %>
        </ul>
      </nav>

      <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "flash #{key}" %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
